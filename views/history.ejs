<!DOCTYPE html>
<html lang="en">
<head>
    <title>Electricity Management</title>
    <meta charset="UTF-8">
    <%- include("partials/head.ejs") %>
</head>

<body>
    <%- include("partials/header.ejs") %>

    <div id="loading" style="display: none">
        <img src="/img/loading.gif" alt="Loading..." />
    </div>

    <!--Main -->
    <div class="container"><br>
        <h2 style="padding: 15px 0 20px 0">Lịch sử số hóa công tơ điện</h2>
        <table id="historyTable" class="table table-striped table-hover table-responsive-md">
            <thead style="background: #a9c6de">
                <tr>
                    <th class="th-sm text-center">ID
                    </th>
                    <th class="th-sm text-center">Tháng
                    </th>
                    <th class="th-sm text-center">Ảnh công tơ
                    </th>
                    <th class="th-sm text-center">Chỉ số công tơ
                    </th>
                    <th class="th-sm text-center">
                    </th>
                </tr>
            </thead>
            <tbody class="text-center"></tbody>
        </table>

        <!-- Modal Delete-->
        <div class="modal fade" id="modalDeleteCell" tabindex="-1" role="dialog" aria-labelledby="modalDelete"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header text-center">
                        <h4 class="modal-title w-100 font-weight-bold ml-5 text-danger">Xóa hàng</h4>
                        <button type="button" class="close text-danger" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body mx-3">
                        <p class="text-center h4">Bạn chắc chắn muốn xóa hàng này?</p>
                        <input type="hidden" id="dataID"/>
                    </div>
                    <div class="modal-footer d-flex justify-content-center deleteButtonsWrapper">
                        <button type="button" class="btn btn-danger btnYesClass" id="buttonYes" data-dismiss="modal">Có</button>
                        <button type="button" class="btn btn-primary btnNoClass" id="buttonNo" data-dismiss="modal">Không</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Footer -->
    <%- include("partials/footer.ejs") %>
    <script type="text/javascript" src="/js/electricity/history.js"></script>
</body>
</html>
